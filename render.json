{
    "name": "RechargePro Frontend",
    "type": "static",
    "buildCommand": "npm install && npm run build",
    "publishDir": "./dist",
    "routes": [
        {
            "src": "^/assets/(.*)",
            "dest": "/assets/$1"
        },
        {
            "src": "^/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "path": "/assets/*",
            "name": "Cache-Control",
            "value": "public, max-age=31536000, immutable"
        }
    ]
}